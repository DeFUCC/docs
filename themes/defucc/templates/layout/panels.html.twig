{% extends 'partials/base.html.twig' %}

{% block content %}
<main id="{{ main_id }}" class="{{ main_classes }} panels">

  <header class="{{ header_classes }}">

    {% block side %}
    <div class="top">

    {% block icon %}
      {% if page.header.icon  %}
          <div class="icon">
                {{page.media[page.header.icon].cropResize(300,300)}}
          </div>
      {% endif %}
    {% endblock %}


    <div class="start">

      {% if config.plugins.breadcrumbs.enabled %}
            {% include 'partials/breadcrumbs.html.twig' %}
      {% endif %}

      <h1 class="">{{ page.title }}</h1>
      {% if page.header.subtitle %}
        {{page.header.subtitle|markdown }}
      {% endif %}

    {% block info %}
      {% include 'partials/article-tags.html.twig' with {item: page} %}
    {% endblock info %}


    {% if page.header.additional %}
      <div class="additional">
        {{ page.header.additional|markdown }}
      </div>
    {% endif %}


    </div>

    </div>

      {% block toc %}{% endblock %}

    {% endblock side %}
  </header>

  <article class="content {{ article_classes }}">
    {% block article %}
      {{ page.content }}
    {% endblock article %}
  </article>

{% block lists %}{% endblock %}

</main>
{% endblock content %}
