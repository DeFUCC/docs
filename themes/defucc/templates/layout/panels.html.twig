{% extends 'partials/base.html.twig' %}

{% block content %}
  <main id="{{ main_id }}" class="{{ main_classes }} panels">
    <header class="{{ header_classes }}">
      {% block side %}
        <div class="top">
          {% block icon %}
            {% if page.header.icon %}
              <div class="icon">
                {{ page.media[page.header.icon].cropResize(300, 300) }}
              </div>
            {% endif %}
          {% endblock %}

          <div class="start">
            {% if config.plugins.breadcrumbs.enabled %}
              {% include 'partials/breadcrumbs.html.twig' %}
            {% endif %}
            {% block title %}
              <h1 class="title">
                {{ page.title }}
              </h1>
            {% endblock %}

            {% if page.header.subtitle %}
              {{ page.header.subtitle|markdown }}
            {% endif %}

            {% block info %}
              {% include 'partials/article-tags.html.twig' with {
                item: page
              } %}
            {% endblock %}

            {% block additional %}
              {% if page.header.additional %}
                <div class="additional">
                  {{ page.header.additional|markdown }}
                </div>
              {% endif %}
            {% endblock %}
          </div>
        </div>

        {% block toc %}
        {% endblock %}
      {% endblock %}
    </header>

    <article id="content" class="pv0 ph4 {{ article_classes }}">
      {% block article %}
        {{ page.content }}
      {% endblock %}
    </article>

    {% block lists %}
    {% endblock %}
  </main>
{% endblock %}
