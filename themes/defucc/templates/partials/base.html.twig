{% set theme_config = attribute(config.themes, config.system.pages.theme) %}
{% set github_link_position = github_link_position is defined ? github_link_position : theme_config.github.position %}
<!DOCTYPE html>
<html lang="{{ grav.language.getActive ?: grav.config.site.default_lang }}">
	<head>
		{% block head %}
			<meta charset="utf-8"/>
			<title>
				{% if header.title %}
					{{ header.title }}
					|
				{% endif %}
				{{ site.title }}</title>
			{% include 'partials/metadata.html.twig' %}
			<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no, shrink-to-fit=no"/>
			<link rel="alternate" type="application/atom+xml" href="{{ base_url_absolute}}/feed:atom" title="Atom Feed"/>
			<link rel="alternate" type="application/rss+xml" href="{{ base_url_absolute}}/feed:rss" title="RSS Feed"/>
			<link rel="icon" type="image/png" href="{{ url('theme://images/favicon.png') }}">


			{% block stylesheets %}
				<link href="https://fonts.googleapis.com/css2?family=Noto+Sans:wght@400;700&display=swap" rel="stylesheet">
				{% do assets.addCss('theme://css/assets/tachyons.min.css',103) %}
				{% do assets.addCss('theme://css/theme.css',102) %}

				{% do assets.addCss('theme://css/feed.css',99) %}
				{% do assets.addCss('theme://css/cards.css',99) %}
				{% do assets.addCss('theme://css/layout.css',101) %}
				{% do assets.addCss('theme://css/content.css',101) %}
				{% do assets.addCss('theme://css/responsive.css',99) %}
				{% do assets.addCss('theme://css/panels.css',90) %}

				{% do assets.addCss('theme://css/custom.css',99) %}


				{% do assets.addCss('theme://css/assets/fork-awesome.min.css',100) %}
				{# https://forkaweso.me/Fork-Awesome/icons/ #}
				{% do assets.addCss('theme://css/assets/featherlight.min.css') %}

			{% endblock %}

			{% block javascripts %}
				{% do assets.addJs('jquery',101) %}
				{% do assets.addJs('theme://js/featherlight.min.js') %}
				{% do assets.addJs('theme://js/scroll.js') %}

			{% endblock %}

			{% block assets deferred %}
				{{ assets.css()|raw }}
				{{ assets.js()|raw }}
			{% endblock %}

		{% endblock head %}
	</head>
	<body data-barba="wrapper" class="searchbox-hidden {{ page.header.body_classes }}" data-url="{{ page.route }}">
		{% block topper %}
			
		{% endblock %}

		{% block topbar %}
			<header id="top-bar">
				<a id="logo" href="{{ base_url_absolute }}">
					{% if theme.custom_logo %}
						<img width="120px" src="{{base_url_absolute ~ '/' ~ theme.custom_logo|first.path }}"/>
					{% else %}
						{{ site.title }}
					{% endif %}
				</a>

				{% include 'partials/menu.html.twig' %}

			</header>
		{% endblock %}


		{% block body %}
			<section id="base">

				{% if page.header.bg %}
					<section class="article-back" style="background-image: linear-gradient(hsla(0,0%,50%,0.1),hsla(0,0%,50%,0.1)), url('{{page.media[page.header.bg].cropResize(1920,1024).quality(70).url}}')"></section>
				{% endif %}


				{% block content %}{% endblock %}

				{% block navigation %}
					{% include 'layout/bottom_nav.html.twig' %}
				{% endblock %}

			</section>
		{% endblock %}

		{% block footer %}
			{% include 'layout/footer.html.twig' %}
		{% endblock %}

		{% block analytics %}
			{% if theme_config.google_analytics_code %}
				{% include 'partials/analytics.html.twig' %}
			{% endif %}
		{% endblock %}

		{% block bottom %}
			{{ assets.js('bottom')|raw }}

		{% endblock %}
	</body>
</html>
