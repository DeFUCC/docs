{% extends 'partials/item-page.html.twig' %}


{% set main_id = 'person' %}

{% set options = { items: {'@root.descendants':''}, filter:{ type: 'design'}, 'order': {'by': 'modified', 'dir': 'asc'}} %}
{% set my_designs = page.collection('my') %}
{% set designs = page.collection(options) %}

{% for design in designs %}
  {% set designers = design.header.designers %}
  {% if designers and designers|count > 0 %}
    {% for person in designers %}
      {% if person.alias == page.url %}
        {% do my_designs.addPage(design) %}
      {% endif %}
    {% endfor %}
  {% endif %}
{% endfor %}

{% block lists %}
<footer class="listers">

{% include 'partials/lister.html.twig' with {
type: 'design',
title: 'THEME_FRUKT.DESIGNS',
template: 'design-card',
collect: my_designs } %}

</footer>
{% endblock %}
