{% set icon_file = icon_file ?: 'lines/' ~ type ~ '.svg' %}
{% set template = template ?: 'item-card' %}
{% do
  assets.addJs('theme://js/lister.js', 99) %}


{% if collect and collect | count > 0 %}

	<div id="{{ type }}" class="mh4 mv2 flex flex-column  b--light-gray br2">
		<header class="flex sticky top-0 pa2 flex-row justify-between up bg-light-gray z-4" style="border-radius: 4px 4px 0 0" data-type="{{type}}">
			<section>
				{% if icon_file %}
					<span class="item-type">
						{{ read_file('theme://icons/' ~ icon_file) }}
					</span>
				{% endif %}
				{{ title|t }}
			</section>
			<aside>
				{{collect|count}}
				<i class="fa fa-angle-down"></i>
			</aside>
		</header>
		<section class="f6 open z-3" id="{{type}}-list">
			{% for item in collect %}

				{% include 'cards/' ~ template ~ '.html.twig' %}

			{% endfor %}
		</section>


	</div>

{% endif %}
