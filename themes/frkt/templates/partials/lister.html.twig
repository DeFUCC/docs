{% set icon_file = icon_file ?: 'lines/' ~ type ~ '.svg' %}
{% set template = template ?: 'item-card' %}
{% do
  assets.addJs('theme://js/lister.js', 99) %}


  {% if collect and collect | count > 0 %}

    <div id="{{ type }}" class="lister">
      <header class="list-toggle" data-type="{{type}}">
            <h2>{{ title|t }}</h2>
            <h3 class="{{type}}"  style="background-color:var(--{{type}})">
              {% if icon_file %}
                {{ read_file('theme://icons/' ~ icon_file) }}
              {% endif %}
              {{collect|count}}
            </h3>
      </header>
      <section class="alist" id="{{type}}-list">
      {% for item in collect %}

        {% include 'cards/' ~ template ~ '.html.twig' %}

      {% endfor %}
      </section>


    </div>

  {% endif %}
