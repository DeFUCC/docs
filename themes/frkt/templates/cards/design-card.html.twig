{% if item.visible %}

{% do assets.addCss('theme://css/design.css',99) %}
{% do
  assets.addCss('theme://css/icons.css', 99) %}

  <div class="design card">


        {% include 'cards/card-image.html.twig' with { size: 280, url:item.url }%}

      <div class="card-text">

        <a href="{{item.url}}">
          <h3 class="title">{{item.title}}
          </h3>

          <p class="summary">
            {% if item.header.subtitle %}
              {{ item.header.subtitle }}
            {% endif %}

          </p>


          <small class="">

          {% include 'partials/status.html.twig' %}

          {% if item.header.ideas and item.header.ideas|count > 0 %}
            {% include 'partials/tag.html.twig' with {
              type: 'idea',
              icon_file: 'lines/idea.svg',
              text: item.header.ideas|count
            } only %}
          {% endif %}

          {% if item.children|count > 0 %}
            {% include 'partials/tag.html.twig' with {
              type: 'project',
              icon_file: 'lines/project.svg',
              text: item.children|count
            } only %}
          {% endif %}

          </small>

        </a>

      </div>


  </div>

{% endif %}
