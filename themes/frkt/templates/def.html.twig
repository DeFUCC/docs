{% extends 'partials/item-page.html.twig' %}


{% set options = { items: {'@root.descendants':''}, 'filter': { 'type': page.slug }, 'order': {'by': 'date', 'dir': 'asc'}} %}
{% set my_collection = page.collection(options) %}


{% block info %}{% endblock %}

{% block article %}

  {{ page.content }}

{% endblock %}

{% block lists %}
<footer>
  {% include 'partials/lister.html.twig' with {
    type: page.slug,
    title:'THEME_FRUKT.' ~ page.slug|pluralize|upper,
    collect: my_collection.visible } %}
</footer>
{% endblock %}
