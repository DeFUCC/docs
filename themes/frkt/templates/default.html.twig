{% extends 'partials/base.html.twig' %}

{% block asidel %}
<aside class="asidel">
  <section class="parent">
    <a href="{{page.parent.url}}">
      {% if not page.parent.content %}
       <h3>ФРУКТ</h3></a>
      {% else %}
         <h3>{{page.parent.title}}</h3></a>
      {% endif %}
  </section>
  {% if page.parent.children.count > 0 %}
    {% for item in page.parent.children %}
        {% include '/partials/block.html.twig'  %}
    {% endfor %}
  {% endif %}
</aside>
{% endblock %}

{% block content %}
    <h1>{{ page.title }}</h1>
      {{ page.content }}

      {% for child in page.children.visible %}
        <div class="child">
          <h2>{{ child.title }}</h2>
            {{ child.content }}
        </div>
      {% endfor %}

{% endblock %}



{% block asider %}

  {% if page.children.visible.count > 0 %}
  <aside class="asider">
    {% for item in page.children %}
        {% include '/partials/card.html.twig'  %}
    {% endfor %}
    </aside>
  {% endif %}

{% endblock %}
