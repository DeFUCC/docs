{% if item.visible %}

            <a href="{{item.url}}" class="article-card">


            	    {% if item.header.icon or item.media.images or item.media.files %}
                	    <div class="card-image">

                              {% if item.header.icon %}
                                {{item.media[item.header.icon].resize(200,200)}}
                              {% elseif item.media.images %}
                    	            {{item.media.images|first.resize(200,200)}}
                    	        {% elseif item.media.files %}
                    	             {{item.media.files|first.resize(200,200)}}
                    	        {% endif %}

                	    </div>
            	    {% endif %}

                  <div class="tags">
                    {% for tag in item.taxonomy.tag %}
                           <span class="tag">
                             {{tag}}
                           </span>
                       {% endfor %}
                  </div>

            	    <div class="card-content">



                        <div class="content">
                            <h4 class="title is-size-5">{{item.title}}
                            </h4>

                            <p class="subtitle is-size-7">


                                <small class="is-size-7 has-text-weight-normal"><i class="fa fa-clock-o"></i> {{ item.content|readingtime({'minutes_label':'мин.', 'minute_label': 'мин.'}) }}
                                </small> /


                                 <i class="fa fa-eye"></i>
                                 {{ (viewcounts[item.route] ?? 0)|nicenumber }} /
                                 <i class="fa fa-pencil"></i> {{item.modified | nicetime}}</p>


                        </div>
            	    </div>

            </a>

{% endif %}
