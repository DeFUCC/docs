{% if item.visible %}

            <div class="card my-3 columns is-mobile">


            	    {% if item.media.images or item.media.files %}
                	    <div class="column is-one-third">
                	        <a href="{{item.url}}">
                    	        {% if item.media.images %}
                    	            {{item.media.images|first.resize(200,200)}}
                    	        {% else %}
                    	             {{item.media.files|first.resize(200,200)}}
                    	        {% endif %}
                	        </a>
                	    </div>
            	    {% endif %}

            	    <div class="column">
            	        {% if item.template == 'article' %}
            	        {% for cat in item.taxonomy.category %}
            	            <span>{{cat}}</span>
            	        {% endfor %}
            	    {% endif %}

        	       {% for tag in item.taxonomy.tag %}
                        <span class="tag">
                          {{tag}}
                        </span>
                    {% endfor %}

                    <h4 class="title is-size-4"><a href="{{item.url}}">{{item.title}}</a>
                    </h4>

                    <p class="subtitle is-size-7">

                        {% if item.template == 'article' %}
                        <small class="is-size-7 has-text-weight-normal"><i class="fa fa-clock-o"></i> {{ item.content|readingtime({'minutes_label':'мин.', 'minute_label': 'мин.'}) }}
                        </small> /
                         {% endif %}

                         <i class="fa fa-eye"></i>
                         {{ (viewcounts[item.route] ?? 0)|nicenumber }} /
                         <i class="fa fa-pencil"></i> {{item.modified | nicetime}}</p>

                         {% if item.template == 'article' %}
                            <p>{{item.summary()|striptags|slice(0,140)}}...</p>
                         {% else %}
                            <p>{{item.summary(140)|striptags}}</p>
                         {% endif %}


            	    </div>

            </div>

{% endif %}
