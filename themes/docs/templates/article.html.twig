{% extends 'partials/base.html.twig' %}


{% block content %}
    <section id="body-inner" class="content">
        <h1>{{ page.title }}
            
        </h1>
        <small class="is-size-7 has-text-weight-normal">
         <i class="fa fa-eye"></i>
            {{ viewcounts[page.route]|nicenumber }} /
        <i class="fa fa-clock-o"></i> 
            Время на чтение ~ {{ page.content|readingtime({'minutes_label':'мин.', 'minute_label': 'мин.'}) }}
        </small>
           
        <p>
        	{{ page.content }}
        </p>
        <p class="subtitle is-size-7"><i class="fa fa-pencil"></i> Последняя редакция {{page.modified | nicetime}}</p>
    </section>
    
    <section class="content">
        {% set linked = backlinks[page.url] %}
        {% if linked|length >0 %}
            <h3 class="mt-3">На эту статью ссылаются:</h3>
            {%  for link in linked %}
                {% set backlink = page.find(link) %}
                <a href="{{backlink.url}}"><h5>{{backlink.title}}</h5></a>
            {% endfor %}
        {% endif %}
    </section>

{% endblock %}
